{
    "manifest_version"          : 2
  , "minimum_chrome_version"    : "28"

  , "default_locale"            : "en_US"
  , "name"                      : "__MSG_extensionName__"
  , "description"               : "__MSG_extensionDescription__"
  , "version"                   : "0.2.1"

  , "short_name"                : "PWM"
  , "author"                    : "PoziWorld"
  , "homepage_url"              : "https://poziworld.com/"

  , "icons"                     : {
        "16"                    : "global/img/pwm-icon-16.png"
      , "48"                    : "global/img/pwm-icon-48.png"
      , "128"                   : "global/img/pwm-icon-128.png"
    }

  , "permissions"               : [
        "tabs"
      , "*://*.amazon.com/returns/label/"
      , "*://*.pb.com/images/USPS/HTMLFolders/HTML10/"
    ]

  , "content_scripts"           : [
        {
            "matches"           : [ "*://*.amazon.com/returns/label/*" ]
          , "js"                : [
                "global/js/pwm.js"
              , "modules/com_amazon/js/pwm.js"
            ]
          , "css"                : [
                "global/css/pwm.css"
              , "modules/com_amazon/css/pwm.css"
            ]
          , "run_at"            : "document_end"
        }
      , {
            "all_frames"        : true
          , "matches"           : [ "*://*.pb.com/images/USPS/HTMLFolders/HTML10/*" ]
          , "js"                : [
                "global/js/pwm.js"
              , "modules/com_pb/js/pwm.js"
            ]
          , "css"                : [
                "global/css/pwm.css"
              , "modules/com_pb/css/pwm.css"
            ]
          , "run_at"            : "document_end"
        }
    ]

  , "web_accessible_resources"  : [
        "global/img/*.png"
    ]
}
